<h3>Merchants</h3><br><br>

<h3>Enabled Merchants</h3>
<% @enabled_merchants.each do |merchant| %>
  <section id="enabled-merchant-<%= merchant.id %>">
    <ul>
      <p><%= link_to "#{merchant.name}" , admin_merchant_path(merchant) %> <%= button_to 'Disable', {action: :update_status, id: merchant.id, status: 'disable'} %></p>
    </ul>
  </section>
<% end %><br><br>




<h3>Disabled Merchants</h3>
<% @disabled_merchants.each do |merchant| %>
  <section id="disabled-merchant-<%= merchant.id %>">
    <ul>
      <p><%= link_to "#{merchant.name}" , admin_merchant_path(merchant) %> <%= button_to 'Enable', {action: :update_status, id: merchant.id, status: 'enable'} %></p>
    </ul>
  </section>
<% end %>
