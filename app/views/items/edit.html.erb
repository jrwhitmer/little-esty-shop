<h3>Update <%= @item.name %> </h3><br/>
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @item.name %><br/><br/>

  <%= form.label :description %>
  <%= form.text_field :description, value: @item.description %><br/><br/>

  <%= form.label :unit_price %>
  <%= form.number_field :unit_price, value: @item.unit_price %><br/><br/>

  <%= form.submit 'Submit Item Update' %>
<% end %>
