<h1> <%= @merchant.name %> </h1>

<% @items.each do |item| %>
  <section id="merchant-items-<%= item.id %>">
  <%= link_to item.name, "/merchants/#{@merchant.id}/items/#{item.id}" %>
  </section>
<% end %>

<% @disabled_items.each do |item| %>
  <section id="disabled-items-<%= item.id %>">
    <%= item.name %> <%= button_to "Enable", merchant_items_path, {action: :update_item_status, item: item.id, status: "enable"} %>
  </section>
<% end %>

<p> <%= button_to "Create New Item", new_merchant_item_path, method: :get %> </p>
