<h1>Create a New Bulk Discount<h1>

  <%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post do |form| %>
    <%= form.label :percentage, "Percentage:" %>
    <%= form.text_field :percentage %>

    <%= form.label :quantity_threshold, "Quantity Threshold:" %>
    <%= form.text_field :quantity_threshold %>

    <%= form.submit "Create Bulk Discount" %>
  <% end %>
